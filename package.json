{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "yarn install --frozen-lockfile && lerna bootstrap --hoist --ci",
    "test": "lerna run test",
    "build": "lerna run build",
    "publish:next": "lerna publish --no-push --conventional-prerelease --dist-tag next",
    "publish:latest": "lerna publish --allow-branch master --conventional-graduate --create-release github",
    "lint": "lerna run lint",
    "clean": "rm -rf ./lib"
  },
  "devDependencies": {
    "@types/node": "^14.10.0",
    "lerna": "^3.22.1",
    "typescript": "^4.0.2"
  }
}
