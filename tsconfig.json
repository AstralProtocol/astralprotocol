{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "target": "es6",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "./packages",
    "paths": {
      "@astraldao/*": ["./*/"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
}